<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    app:cardBackgroundColor="@color/main_background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImage"
        android:scaleType="centerCrop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|start"/>

    <TextView
        android:id="@+id/tvReviewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginStart="50dp"
        android:textColor="@color/white"
        android:fontFamily="@font/sk_modernist_regular"
        android:textSize="21sp"
        android:letterSpacing="0.05"
        />

    <TextView
        android:id="@+id/tvReviewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginStart="50dp"
        android:layout_marginTop="26dp"
        android:textColor="#66FFFFFF"
        android:fontFamily="@font/sk_modernist_regular"
        android:textSize="16sp"
        android:letterSpacing="0.05"
        />

    <TextView
        android:id="@+id/tvReviewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginTop="56dp"
        android:textColor="@color/tv_review_count"
        android:fontFamily="@font/sk_modernist_regular"
        android:textSize="16sp"
        android:lineSpacingExtra="10sp"
        android:letterSpacing="0.05"
        />

</androidx.cardview.widget.CardView>